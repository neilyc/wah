{% extends "admin/base.html.twig" %}

{% block container %}
  <div class="services">
    <div class="service form">
      <form action="{{ path_for('admin_service_save') }}" method="post" enctype="multipart/form-data">
        <input type="hidden" value="{{ service.id }}" name="id">
        <div class="row">
          <label for="lat">Restauration</label><br />
          <textarea type="text" name="restauration">{{ service.restauration }}</textarea>
        </div>
        <div class="row">
          <label for="lat">Autre</label><br />
          <textarea type="text" name="autre">{{ service.autre }}</textarea>
        </div>
        <button class="btn btn-success">Sauvegarder</button>
      </form>
    </div>
  </div>
{% endblock %}