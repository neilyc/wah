{% extends "admin/base.html.twig" %}

{% block container %}
  <div class="lodgings">
    <div class="lodging form">
      <form action="{{ path_for('admin_lodging_save') }}" method="post" enctype="multipart/form-data">
        <input type="hidden" value="{{ lodging.id }}" name="id">
        <textarea type="text" name="description">{{ lodging.description }}</textarea>
        <input type="text" value="{{ lodging.price }}" name="price">
        {% if lodging.image %}
          <img src="/upload/lodging/{{ lodging.image }}" />
        {% endif %}
        <input type="file" name="image">
        <button>Sauvegarder</button>
      </form>
    </div>
  </div>
{% endblock %}