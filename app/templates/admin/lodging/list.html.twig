{% extends "admin/base.html.twig" %}

{% block container %}
  <div class="lodgings">
    <div class="lodgings-list list">
      <a href="{{ path_for('admin_lodging_create') }}" class="btn btn-info">Ajouter</a>
      {% if lodgings %}
        <table>
          <tr>
            <th>Nom</th>
            <th>Image</th>
            <th>Actions</th>  
          </tr>          
          {% for lodging in lodgings %}
            <tr class="lodging">
              <td>{{lodging.title}}</td>
              <td>        
                {% if lodging.image %}
                  <img src="/upload/lodging/{{ lodging.image }}" />
                {% endif %}
              </td>
              <td>
                <a href="{{ path_for('admin_lodging_edit',  { 'id': lodging.id }) }}" class="btn btn-success edit">Modifier</a> <a href="{{ path_for('admin_lodging_delete',  { 'id': lodging.id }) }}" class="btn btn-danger delete">Supprimer</a>
              </td>
            </tr>
          {% endfor %}
        </table>
      {% else %}
        <div>
          Il n'y a pas de lodging pour l'instant, pourquoi ne pas en <a href="{{ path_for('admin_lodging_create') }}">ajouter</a> une ?
        </div>
      {% endif %}
    </div>
  </div>

  {% include 'admin/shared/popin-valid.html.twig' %}
{% endblock %}